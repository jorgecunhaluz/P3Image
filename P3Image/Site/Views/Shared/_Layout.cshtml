<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>

    <div class="container">
        <div class="header">
            <h3 class="text-muted">Campos do Formulário</h3>
        </div>

        @if (TempData["Mensagem"] != null)
        {
            Site.Models.Mensagem mensagem = (Site.Models.Mensagem)TempData["Mensagem"];
            
            
            <div class="alert @(mensagem.Sucesso ? "alert-success" : "alert-danger") clearfix">
                @mensagem.Texto
            </div>
        }

        <div id="conteudo">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
