@model List<Entidades.Opcao>
@{
    ViewBag.Title = "ListaDropDown";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>
<body>
    <div>
        <form action="/Campo/GravaOpcaoAdicionada" method="post">


        <h1>Campo: <strong>@ViewBag.DescricaoCampo</strong></h1>

         @Html.Hidden("IdCampo", (object)@ViewBag.IdCampo)
         

        <label for="campo">Opção:</label>
        @Html.TextBox("Descricao", "", new { @class = "form-control" })
        <br />
        <input type="submit" value="Adicionar" class="btn btn-primary pull-right" />



        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var opcao in Model)
                {
                    <tr>
                        <td>@opcao.Descricao</td>
                        <td>
                    <a href="~/Campo/ExcluirOpcao/@opcao.Id" class="btn btn-danger pull-right excluir">Excluir</a>
                </td>
                    </tr>
                }
            </tbody>
        </table>
        </form>
    </div>
</body>
</html>
