<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <div class="header">
            <ul class="nav nav-pills pull-right">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Categorias", "Index", "Categoria")</li>
                <li>@Html.ActionLink("Sub-Categorias", "Index", "SubCategoria")</li>
                <li>@Html.ActionLink("Campos", "Index", "Campo")</li>
            </ul>
            <h3 class="text-muted">Gerenciamento Categorias</h3>
        </div>

        @if (TempData["Mensagem"] != null)
        {
            Admin.Models.Mensagem mensagem = (Admin.Models.Mensagem)TempData["Mensagem"];
            
            
            <div class="alert @(mensagem.Sucesso ? "alert-success" : "alert-danger") clearfix">
                @mensagem.Texto
            </div>
        }

        <div id="conteudo">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
